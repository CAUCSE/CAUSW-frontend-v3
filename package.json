{
  "name": "causw-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@causw/web",
    "dev:admin": "turbo dev --filter=@causw/admin",
    "build": "turbo build",
    "build:web": "turbo build --filter=@causw/web",
    "build:admin": "turbo build --filter=@causw/admin",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@causw/eslint-config": "workspace:*",
    "@causw/prettier-config": "workspace:*",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  },
  "packageManager": "pnpm@9.15.0"
}
