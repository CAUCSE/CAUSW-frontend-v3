{
  "name": "causw-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:student": "turbo dev --filter=@causw/student",
    "dev:admin": "turbo dev --filter=@causw/admin",
    "build": "turbo build",
    "build:student": "turbo build --filter=@causw/student",
    "build:admin": "turbo build --filter=@causw/admin",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.3.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  },
  "packageManager": "pnpm@9.15.0"
}
